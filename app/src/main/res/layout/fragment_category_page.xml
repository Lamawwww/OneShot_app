<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E2A3A"
    android:outlineProvider="none"
    tools:context=".fragments.CategoryPage">

    <SearchView
        android:id="@+id/categoryBar"
        android:layout_width="260dp"

        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/searchbar"
        android:backgroundTint="#FFFCFC"
        android:iconifiedByDefault="false"
        android:queryHint="Type here..."
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewManga"
        android:layout_width="410dp"
        android:layout_height="553dp"

        android:layout_marginTop="112dp"
        android:padding="8dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/bottomView2"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="#1d2736"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tagsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tags:"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <HorizontalScrollView
        android:layout_width="395dp"
        android:layout_height="39dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:orientation="horizontal">

            <Button
                android:id="@+id/actionButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Action"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/adventureButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Adventure" />

            <Button
                android:id="@+id/crimeButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Crime" />

            <Button
                android:id="@+id/comedyButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Comedy" />

            <Button
                android:id="@+id/romanceButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Romance" />

            <Button
                android:id="@+id/dramaButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Drama" />
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>