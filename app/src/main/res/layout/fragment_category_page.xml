<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E2A3A"
    android:outlineProvider="none"
    tools:context=".fragments.CategoryPage">

    <View
        android:id="@+id/headerView5"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="#1d2736"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="106dp"
        android:layout_height="37dp"
        android:fontFamily="sans-serif-black"
        android:text="OneShot"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/headerView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="71dp"
        android:layout_height="59dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/headerView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/oneshotmascot" />

    <SearchView
        android:id="@+id/categoryBar"
        android:layout_width="260dp"

        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="731dp"
        android:background="@drawable/searchbar"
        android:backgroundTint="#FFFCFC"
        android:iconifiedByDefault="false"
        android:queryHint="Type here..."
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542" />

    <View
        android:id="@+id/bottomView2"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="#1d2736"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tagsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="330dp"
        android:fontFamily="sans-serif-black"
        android:text="Tags:"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerView5" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="395dp"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagsTitle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:scrollbars="none">

            <Button
                android:id="@+id/actionButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#374151"
                android:text="Action"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/comedyButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#374151"
                android:text="Comedy"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dramaButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#374151"
                android:text="Drama"
                android:textStyle="bold" />

            <Button
                android:id="@+id/horrorButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#374151"
                android:layout_weight="1"
                android:text="Horror"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mysteryButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#374151"
                android:layout_weight="1"
                android:text="Mystery"
                android:textStyle="bold" />

            <Button
                android:id="@+id/psychoButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#374151"
                android:layout_weight="1"
                android:text="Psychological"
                android:textStyle="bold" />

            <Button
                android:id="@+id/romanceButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#374151"
                android:text="Romance"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sliceButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#374151"
                android:layout_weight="1"
                android:text="Slice of Life"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sportsButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#374151"
                android:layout_weight="1"
                android:text="Sports"
                android:textStyle="bold" />

            <Button
                android:id="@+id/naturalButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#374151"
                android:layout_weight="1"
                android:text="Supernatural"
                android:textStyle="bold" />

            <Button
                android:id="@+id/tragedyButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#374151"
                android:layout_weight="1"
                android:text="Tragedy"
                android:textStyle="bold" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewManga"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="161dp" />

</androidx.constraintlayout.widget.ConstraintLayout>